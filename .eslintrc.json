{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "settings": {
    "next": {
      "rootDir": ["./"]
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/jsx-key": "off",
    "react-hooks/exhaustive-deps": "error"
  }
}
